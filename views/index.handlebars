<div>
    <h1>Eat-Da-Burger</h1>
    <h2>devoured</h2>
    {{#each burger}}
    <div>
        {{#if devoured}}
        <p>{{this.burger_name}}</p>
        {{/if}}
    </div>
    {{/each}}

    <hr>
    <h2>Not eaten</h2>
    {{#each burger}}
    <div>
        {{#unless devoured}}
        <p>{{this.burger_name}}</p>
        <a class="waves-effect waves-light btn devour-button">Devour</a>
        <br><br>
        <hr>
        {{/unless}}
    </div>
    {{/each}}
    <hr>
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Enter the Burger you want to eat..." id="user-burger" type="text"
                        class="validate">
                </div>
            </div>
        </form>
        <button class="btn waves-effect waves-light" type="submit" name="action" id="submit-button">Create Burger
            <i class="material-icons right">send</i>
        </button>